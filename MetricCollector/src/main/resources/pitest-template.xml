    <build>
        <plugins>
            <plugin>
                <groupId>org.pitest</groupId>
                <artifactId>pitest-maven</artifactId>
                <version>1.7.6</version>
                <configuration>
                    <outputFormats>CSV</outputFormats>
                    <timestampedReports>false</timestampedReports>
                    <targetClasses>
                        ${targetClasses}
                    </targetClasses>
                    <targetTests>
                        ${targetTests}
                    </targetTests>
                    <includedTestMethods>
                        ${includedTestMethods}
                    </includedTestMethods>
                    <reportsDirectory>
                        ${reportsDirectory}
                    </reportsDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>
</profile>
